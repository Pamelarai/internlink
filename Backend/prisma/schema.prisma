generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum Role {
  INTERN
  PROVIDER
}

model User {
  id               Int              @id @default(autoincrement())
  email            String           @unique
  password         String
  role             Role
  createdAt        DateTime         @default(now())
  internProfile    InternProfile?
  providerProfile  ProviderProfile?
}

model InternProfile {
  id             Int    @id @default(autoincrement())
  user           User   @relation(fields: [userId], references: [id])
  userId         Int    @unique
  fullName       String
  university     String
  major          String
  graduationYear Int?
}

model ProviderProfile {
  id          Int    @id @default(autoincrement())
  user        User   @relation(fields: [userId], references: [id])
  userId      Int    @unique
  companyName String
  industry    String
  website     String
}
