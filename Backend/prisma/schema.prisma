generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum Role {
  INTERN
  PROVIDER
}

model User {
  id               Int              @id @default(autoincrement())
  email            String           @unique
  password         String
  role             Role
  createdAt        DateTime         @default(now())
  internProfile    InternProfile?
  providerProfile  ProviderProfile?
  notifications    Notification[]
}

model InternProfile {
  id             Int    @id @default(autoincrement())
  user           User   @relation(fields: [userId], references: [id])
  userId         Int    @unique
  fullName       String
  university     String
  major          String
  graduationYear Int?
  skills         String? @db.Text
  bio            String? @db.Text
  resumeUrl      String?
  portfolioUrl   String?
  githubUrl      String?
  linkedinUrl    String?
  applications   Application[]
}

model ProviderProfile {
  id           Int    @id @default(autoincrement())
  user         User   @relation(fields: [userId], references: [id])
  userId       Int    @unique
  companyName  String
  industry     String
  website      String?
  description  String? @db.Text
  logo         String?
  location     String?
  companySize  String?
  foundedYear  Int?
  socialLinks  String? @db.Text // Store as JSON string or plain text
  mission      String? @db.Text
  vision       String? @db.Text
  culture      String? @db.Text
  benefits     String? @db.Text
  internships  Internship[]
}

model Internship {
  id                 Int          @id @default(autoincrement())
  providerId         Int
  provider           ProviderProfile @relation(fields: [providerId], references: [id])
  title              String
  description        String       @db.Text
  requirements       String       @db.Text
  location           String
  locationType       String?      // Remote, Onsite, Hybrid
  duration           String
  stipend            Float?
  applicationDeadline DateTime
  startDate          DateTime?
  status             String       @default("OPEN")
  category           String       @default("General")
  type               String?      // Paid, Unpaid
  workingHours       String?      // Full-time, Part-time
  hoursPerDay        Int?
  numberOfOpenings   Int?
  educationLevel     String?
  experienceRequired String?
  aboutInternship    String?      @db.Text
  rolesResponsibilities String?   @db.Text
  whatInternWillLearn String?      @db.Text
  selectionProcess   String?      @db.Text
  certificate        Boolean      @default(false)
  jobOffer           Boolean      @default(false)
  otherBenefits      String?      @db.Text
  requiredSkills     String?      @db.Text
  companyName        String?      // To store company name if different from provider
  createdAt          DateTime     @default(now())
  applications       Application[]
}


model Application {
  id           Int        @id @default(autoincrement())
  internshipId Int
  internship   Internship @relation(fields: [internshipId], references: [id])
  internId     Int
  intern       InternProfile @relation(fields: [internId], references: [id])
  coverLetter  String
  resume       String
  status       String      @default("PENDING")
  createdAt    DateTime    @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}
